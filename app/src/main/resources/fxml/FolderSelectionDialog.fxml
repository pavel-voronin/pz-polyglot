<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.pz.polyglot.ui.FolderSelectionDialogController" spacing="10">
    <padding>
        <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
    </padding>
    <children>
        <Label text="%language-dialog.game.label" />
        <HBox spacing="5">
            <children>
                <TextField fx:id="gameField" />
                <Button text="%language-dialog.browse.button" fx:id="gameBrowse" onAction="#onGameBrowse" />
            </children>
        </HBox>
        <CheckBox text="%language-dialog.editable.checkbox" fx:id="gameEditableCheckBox" />
        <Label text="%language-dialog.steam.label" />
        <HBox spacing="5">
            <children>
                <TextField fx:id="steamField" />
                <Button text="%language-dialog.browse.button" fx:id="steamBrowse" onAction="#onSteamBrowse" />
            </children>
        </HBox>
        <CheckBox text="%language-dialog.editable.checkbox" fx:id="steamEditableCheckBox" />
        <Label text="%language-dialog.cache.label" />
        <HBox spacing="5">
            <children>
                <TextField fx:id="cacheField" />
                <Button text="%language-dialog.browse.button" fx:id="cacheBrowse" onAction="#onCacheBrowse" />
            </children>
        </HBox>
        <CheckBox text="%language-dialog.editable.checkbox" fx:id="cacheEditableCheckBox" />
        <Button text="%language-dialog.ok.button" fx:id="okButton" onAction="#onOk" />
    </children>
</VBox>
